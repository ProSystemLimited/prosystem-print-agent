{
  "name": "prosystem-print-agent",
  "version": "1.0.0",
  "description": "Silent local print agent for dynamic barcode/receipt printing",
  "author": "ProSystem",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProSystemLimited/prosystem-print-agent.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@thesusheer/electron-printer": "^2.0.4",
    "auto-launch": "^5.0.5",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^4.17.1",
    "node-thermal-printer": "^4.5.0",
    "sharp": "^0.34.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "productName": "ProSystem Print Agent",
    "appId": "com.prosystem.printagent",
    "directories": {
      "buildResources": "build"
    },
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "files": [
      "**/*",
      "!node_modules/**/binding.gyp",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "publish": {
      "provider": "github",
      "owner": "ProSystemLimited",
      "repo": "prosystem-print-agent"
    },
    "win": {
      "target": "nsis",
      "icon": "build/android-chrome-384x384.ico",
      "publisherName": "ProSystem"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    }
  }
}
